<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="MP chart">

        <EditTextPreference
            app:key="function_by_default"
            app:title="function by default"
            app:defaultValue="x^3"
            />

        <EditTextPreference
            app:key="min_x_coordinate"
            app:title="min x-coordinate"
            app:defaultValue="-5" />

        <EditTextPreference
            app:key="max_x_coordinate"
            app:title="max x-coordinate"
            app:defaultValue="5" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Sensors">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_continuous_measurement"
            android:title="Conntinuous sesnor measurements" />

        <EditTextPreference
            app:key="time_step"
            app:title="Time step for measurement, ms"
            app:defaultValue="10" />

    </PreferenceCategory>

</PreferenceScreen>